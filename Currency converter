import requests

def currency_request():
    currency = input().lower()
    url = f"http://www.floatrates.com/daily/{currency}.json"
    response = requests.get(url)
    data = response.json()

    # Cache starts with USD and EUR if they exist in the data
    cache = {}
    for key in ["usd", "eur"]:
        if key in data:
            cache[key] = data[key]

    while True:
        exchange_currency = input().lower()
        if exchange_currency == "":
            break

        initial_money = float(input())
        print("Checking the cache...")

        if exchange_currency in cache:
            print("Oh! It is in the cache!")
            rate = cache[exchange_currency]["rate"]
        else:
            print("Sorry, but it is not in the cache!")
            # Add the new currency to cache from JSON
            if exchange_currency in data:
                cache[exchange_currency] = data[exchange_currency]
                rate = data[exchange_currency]["rate"]
            else:
                # Should not happen in test cases, but safe guard
                print(f"Currency {exchange_currency.upper()} not available.")
                continue

        final_amount = initial_money * rate
        print(f"You received {final_amount:.2f} {exchange_currency.upper()}.")  # 2 decimal
