def bot_startup():
    bot_name = "lolbot"
    creation_year = 1090

    user_name = input()
    age1 = int(input())
    age2 = int(input())
    age3 = int(input())

    def age_calculation():
        final_age = (((age1 * 70) + (age2 * 21) + (age3 * 15)) % 105)
        return final_age

    final_age = age_calculation()

    def number_calculation():
        goal_number = int(input())
        for n in range(goal_number + 1):
            print(f"{n} !")
        print("Completed, have a nice day!")

    def exam_time():
        while True:
            print("""Why use methods?
1. To repeat a statement multiple times.
2. To decompose a program into several small subroutines.
3. To determine the execution time of a program.
4. To interrupt the execution of a program.""")
            answer = input()
            if answer == "2":
                print("Congratulations, have a nice day!")
                return
            else:
                print("Please, try again.")

    print(f"""Hello! My name is {bot_name}.
I was created in {creation_year}.
Please, remind me your name.
What a great name you have, {user_name}!
Let me guess your age.
Enter remainders of diving your age by 3, 5 and 7.
Your age is {final_age}; that's a good time to start
Now i will prove to you that i can count to any number you want""")

    number_calculation()

    print("Let's test your programming knowledge.")
    exam_time()


bot_startup()
